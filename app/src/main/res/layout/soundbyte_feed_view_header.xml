<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/info_portion"
    android:background="#eeeeee"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <View
        android:id="@+id/open_indicator"
        android:layout_width="15dp"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:layout_toRightOf="@+id/open_indicator"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        android:id="@+id/loading_progress_bar"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/open_indicator"
        android:id="@+id/feed_type_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_send_black_18dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="47dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="JoeHates"
            android:id="@+id/friend_text" />
        <TextView
            android:visibility="visible"
            android:textSize="12sp"
            android:textColor="#8b8b8b"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Today"
            android:id="@+id/date_text" />
    </LinearLayout>
</RelativeLayout>